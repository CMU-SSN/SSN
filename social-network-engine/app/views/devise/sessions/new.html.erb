<%= content_for :content do %>
	<div class="center white no-shadow">
		<%= image_tag("sample_neighborhood_logo.png", :class => "logo") %>
		<h3>City of Palo Alto SSN :: Cool City Neighborhood</h3>
	</div>
	<div class="center white no-shadow">
		<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :rel => 'external', :class => 'facebook-link', :data => { :role => 'button', :theme => 'b', :icon => 'facebook', :iconpos => 'left' }%>
		<h4>
			Or Using Your Local SSN Account
		</h4>
	</div>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	    <div data-role="fieldcontain" class="ui-hide-label">
	      <%= f.label :email %>
	      <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>
	    </div>
	    <div data-role="fieldcontain" class="ui-hide-label">
	      <%= f.label :password %>
	      <%= f.password_field :password, :placeholder => "Password" %>
	    </div>

	    <% if devise_mapping.rememberable? -%>
				<div data-role="fieldcontain" class="ui-hide-label">
				  <input type="checkbox" name="user[remember_me]" id="user_remember_me" value="1"/>
				  <label for="user_remember_me">Keep me signed in</label>
				</div>
	    <% end -%>

	    <%= f.submit "Sign in", :data => { :role => 'button', :icon => 'arrow-r', :iconpos => 'right', :theme => 'b' }%>
	<% end %>
<% end %>

<%= content_for :scripts do %>
    <script type="text/javascript">
        ssn_hide_header();
				ssn_hide_footer();
    </script>
<% end %>
