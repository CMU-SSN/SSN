<% content_for :page do %>
	<div data-role="page" data-theme="a" id="deviseCreate">
<% end %>

<%= content_for :content do %>
	<h1>Survivable Social Network</h1>
	<div class="login"> 
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div><%= f.text_field :name, :autofocus => true, :placeholder => "Name" %></div>
        <div><%= f.email_field :email, :placeholder => "Email" %></div>
        <div><%= f.password_field :password, :placeholder => "Password" %></div>
        <div><%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %></div>
        <div><%= f.submit "Sign up" %></div>
    <% end %>
<% end %>
