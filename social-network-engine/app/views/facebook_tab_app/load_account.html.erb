<%= content_for :content do %>
	<h3>New Account Sign Up</h3>
	<h4>City of Palo Alto SSN</h4>
	<hr />
	<div class="signup">
		<p>Welcome to the Cool City Neighborhood SSN node.  Please choose a password for your account.  Note that this password should <b>NOT</b> be the same as your Facebook password.</p><br/>
    <%= form_for @user, :url => { :action => "load_account" } do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
        <h2>Please fix the following issues to create your account:</h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        Username: &nbsp;<b><%= @user.email %></b><br />
      </div>
      <div data-role="fieldcontain" class="ui-hide-label">
        <%= f.label :password %>
        <%= f.password_field :password, :autofocus => true, :placeholder => "Password" %>
      </div>
      <div data-role="fieldcontain" class="ui-hide-label">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, :placeholder => "Password Again" %>
      </div>
      <%= f.submit "Continue", :data => { :role => 'button', :icon => 'arrow-r', :iconpos => 'right', :theme => 'b' } %>
    <% end %>
	</div>
<% end %>

<%= content_for :scripts do %>
	<script type="text/javascript">
		ssn_hide_header_footer();
	</script>
<% end %>