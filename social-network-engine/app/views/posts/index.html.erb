<% content_for :header do %>
    <h3>SSN</h3>
    <a href="needs.html.erb" class="ui-btn-right" data-icon="grid" data-theme="c">Needs</a>
<% end %>
<% content_for :content do %>
    <div class="feed-item">
      <%= form_for @post, :url => {:action => "create"}, :html => {:method => :post} do |f| %>
          <%= f.text_area :text, :placeholder => "Enter new posts here" %>
          <%= f.submit "Post" %>
      <% end %>
    </div>

    <% unless @posts.nil? %>
        <% @posts.each do |post| %>
            <div class="feed-item">
              <a class="feed-top" href="jamesProfile.html.erb">
                <img src="<%= post.user.profile_pic %>" class="feed-user-image">

                <div class="feed-heading">
                  <h2 class="feed-name">
                    <% if post.user.name %>
                        <%= post.user.name %>
                    <% else %>
                        Anonymous
                    <% end %>
                  </h2>

                  <p class="feed-time">Posted <%= time_ago_in_words(post.created_at) %> ago</p>
                </div>
              </a>

              <div>
                <p class="feed-text">
                  <%= post.text %>
                </p>
              </div>
            </div>
        <% end %>
    <% else %>
        No posts yet.
    <% end %>
<% end %>
